@model PropertyRentalManagement.Models.Message

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Message</h4>
<hr />
<form asp-action="Create">

    <div class="row">

        <div class="col-md-4">
            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SenderId" class="control-label">Sender</label>
                    <select asp-for="SenderId" class="form-control" asp-items="ViewBag.SenderId" disabled></select>
                </div>
                <div class="form-group">
                    <label asp-for="ReceiverId" class="control-label">Receiver</label>
                    <select asp-for="ReceiverId" class="form-control" asp-items="ViewBag.ReceiverId"></select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>

        </div>

        <div class="col-md-8">
            <!-- Second column on the right -->
            <div class="form-group">
                <label asp-for="MessageContent" class="control-label">Message Content</label>
                <textarea asp-for="MessageContent" class="form-control" rows="10"></textarea>
                <span asp-validation-for="MessageContent" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
