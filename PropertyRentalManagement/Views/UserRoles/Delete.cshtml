@model UserRolesViewModel

<h2>Delete User</h2>

<p>Are you sure you want to delete user '@Model.UserName' (First name: @Model.FirstName, Lastname: @Model.LastName, Email: @Model.Email)?</p>

<form asp-action="DeleteConfirmed" asp-route-userId="@Model.UserId" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
